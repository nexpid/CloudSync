{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"lib": [
			"ESNext"
		],
		"strictNullChecks": false,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": [
			"./worker-configuration.d.ts",
			"node"
		],
		"baseUrl": "./",
		"paths": {
			"assets": ["./assets/*"],
			"api/*": ["./src/api/*"],
			"lib/*": ["./src/lib/*"],
			"silly/*": ["./src/silly/*"],
			"@/*": ["./src/*"]
		}
	},
	"exclude": [
		"./dist",
		"./test",
		"./packages"
	]
}
