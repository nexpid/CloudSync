{
	"name": "song-spotlight",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify --define IS_PRODUCTION:true",
		"dry-deploy": "bun run deploy --dry-run --outdir=./bundled",
		"runtime": "wrangler types",
		"format": "dprint fmt",
		"lint": "eslint --fix",
		"typecheck": "bun run runtime && tsc --noEmit"
	},
	"dependencies": {
		"@hono-rate-limiter/cloudflare": "^0.2.2",
		"@song-spotlight/api": "1.1.2",
		"discord-api-types": "^0.38.21",
		"hono": "^4.9.4",
		"jose": "^6.0.13",
		"zod": "^4.1.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@types/node": "^24.3.0",
		"eslint": "^9.34.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-typescript-paths": "^0.0.33",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.3.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"wrangler": "^4.34.0"
	},
	"optionalDependencies": {
		"@resvg/resvg-wasm": "^2.6.2"
	},
	"peerDependencies": {
		"jiti": "^2.5.1"
	},
	"packageManager": "bun@1.2.20",
	"cloudflare": {
		"bindings": {
			"JWT_SECRET": {
				"description": "Randomly generated secret, use `bun run test/src/jwt.ts` in cwd to generate"
			},
			"CLIENT_ID": {
				"description": "The Discord OAuth2 application ID"
			},
			"CLIENT_SECRET": {
				"description": "The Discord OAuth2 application secret"
			},
			"REDIRECT_URI": {
				"description": "The Discord OAuth2 application redirect URI"
			},
			"CLIENT_TOKEN": {
				"description": "(Optional) A Discord bot token (prefixed with Bot token type), used for the Silly service"
			},
			"ADMIN_USER_ID": {
				"description": "(Optional) Your Discord user id, used for testing"
			}
		}
	}
}
